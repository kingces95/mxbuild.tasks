<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <ExtNugetDir>$(MSBuildThisFileDirectory)</ExtNugetDir>
  </PropertyGroup>
  
  <!--Nuget Target Framework Monikers-->
  <!--see: http://blog.nuget.org/20150729/Introducing-nuget-uwp.html-->
  <PropertyGroup>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(CSPortableProjectGuids)'">dotnet</NugetTFM>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(AndroidProjectGuids)'">MonoAndroid</NugetTFM>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(IosProjectGuids)'">Xamarin.iOS</NugetTFM>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(IosProjectClassicGuids)'">MonoTouch</NugetTFM>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(UwpProjectGuids)'">uap</NugetTFM>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(WinRTPhoneProjectGuids)'">wpa</NugetTFM>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(WinRTTabletProjectGuids)'">win</NugetTFM>
    <NugetTFM Condition="'$(ProjectTypeGuids)' == '$(Wp8ProjectGuids)'">wp</NugetTFM>
  </PropertyGroup>

</Project>
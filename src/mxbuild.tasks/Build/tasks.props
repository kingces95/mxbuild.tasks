<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <TaskAssemblyPath>$(MSBuildThisFileDirectory)Mxbuild.Tasks.dll</TaskAssemblyPath>
    <TaskRootNamespace>Mxbuild.Tasks.</TaskRootNamespace>
</PropertyGroup>

  <UsingTask TaskName="$(TaskRootNamespace)CreateNuspec" AssemblyFile="$(TaskAssemblyPath)" />
  <UsingTask TaskName="$(TaskRootNamespace)DumpTaskItems" AssemblyFile="$(TaskAssemblyPath)" />
  <UsingTask TaskName="$(TaskRootNamespace)WriteTextToFile" AssemblyFile="$(TaskAssemblyPath)" />

  <UsingTask TaskName="$(TaskRootNamespace)GetAssemblyAttribute" AssemblyFile="$(TaskAssemblyPath)" />
  <UsingTask TaskName="$(TaskRootNamespace)Diff" AssemblyFile="$(TaskAssemblyPath)" />
  <UsingTask TaskName="$(TaskRootNamespace)ExpandTemplate" AssemblyFile="$(TaskAssemblyPath)" />
  <UsingTask TaskName="$(TaskRootNamespace)RegexMatches" AssemblyFile="$(TaskAssemblyPath)" />
  <UsingTask TaskName="$(TaskRootNamespace)RegexReplace" AssemblyFile="$(TaskAssemblyPath)" />
</Project>